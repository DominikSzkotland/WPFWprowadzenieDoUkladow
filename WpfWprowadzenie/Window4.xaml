<Window x:Class="WpfWprowadzenie.Window4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfWprowadzenie"
        mc:Ignorable="d"
        Title="Window4" Height="450" Width="800">
    <DockPanel>
        <!--Ostatni element Wypełnia całą pozostałą przestrzeń-->
        <Button DockPanel.Dock="Bottom">1</Button>
        <Button DockPanel.Dock="Top">2</Button>
        <Button>3</Button>
        <Button>4</Button>
        <Button>5</Button>
        <Button>6</Button>
        <Button>7</Button>
        <Button>8</Button>
        <Button>9</Button>
        <Canvas HorizontalAlignment="Center">
            <Rectangle
                Width="100"
                Height="200"
                Fill="Coral"></Rectangle>
        </Canvas>
    </DockPanel>
</Window>
